<% provide(:title, "ログイン") %>
<h1>ログイン</h1>


<%= form_with  scope: :session, url: login_path, local: true, class: "form-container" do |f| %>
    <div class="form-input">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-input">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="button-container">
        <%= f.submit "ログイン"  %>
    </div>
<% end %>

<p>新規登録は <%= link_to "こちら", signup_path %></p>
